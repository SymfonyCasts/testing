<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome to Dinotopia!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <h1>Our Dino's!</h1>
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Genus</th>
                        <th>Size</th>
                        <th>Enclosure</th>
                    </tr>
                </thead>
                <tbody>
                {% for dino in dinos %}
                    <tr>
                        <td>{{ dino.name }}</td>
                        <td>{{ dino.genus }}</td>
                        <td>{{ dino.specification }}</td>
                        <td>{{ dino.enclosure }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endblock %}
    </body>
</html>
